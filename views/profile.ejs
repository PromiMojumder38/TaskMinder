<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TaskMinder</title>
  <link rel="stylesheet" href="task.css">
  <link rel="icon" type="image/x-icon" href="logo_final.png">

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"
    integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>

  <div class="container">
    <div class="left-side">
      <img src="logo_and_title-removebg.png">
      <button class="btn" id="add-task-button"><i class="fas fa-plus"></i> &nbsp Add Task</button>
      <button class="logoutbtn"><a id="logout-button" href="#">Logout</a></li></button>
    </div>

    <div class="middle-box">
      <section>
        <% if (tasks.length > 0) { %>
        <ul class="task-list">
          <% tasks.forEach(function(task) { %>
          <li>
            <div class="task-box">
              <div class="task-info">
                <h3><%= task.task_name %></h3>
                <% if (task.task_description != 0) { %>
                <p><%= task.task_description %></p>
                <% } else { %>
                <p>No description</p>
                <% } %>
                <p>Last edited: <%= task.task_updatedAt.toLocaleString('en-US') %></p>
              </div>
              <div class="task-actions">
                <div class="dropdown-menu">
                  <button type="button" class="dropdown-item edit" onclick="showUpdatePopup('<%= task.task_id %>')">
                    <i class="fas fa-pencil-alt"></i>&nbspUpdate
                  </button>                  
                  <form action="/tasks/delete/<%= task.task_id %>" method="POST" onsubmit="return confirmDelete(event);">
                    <button type="submit" class="dropdown-item delete"><i class="fas fa-trash"></i>&nbspDelete</button>
                  </form>
                </div>
              </div>
            </div>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p>No tasks found.</p>
        <% } %>
      </section>
    </div>


    <div class="right-side">
      <div class="user-info">
        <div class="user-logo">
          <img src="only logo.png" alt="User Logo">
        </div>
        <div class="user-details">
          <h4><%= user.name %></h4>
          <p><%= user.email %></p>
        </div>
      </div>
      <div role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100" style="--value:65">
      </div>
      <div class="task-boxes">
        <div class="task-boxx">
          <h5>Total</h5>
          <p>10</p>
        </div>
        <div class="task-boxxx">
          <h5>Completed</h5>
          <p>4</p>
        </div>
      </div>
    </div>

  </div>

  <div class="task-popup" id="task-popup" style="display: none;">
    <div class="task-popup-content">
      <span class="close" id="close-modal">&times;</span>
      <h2>Add Task</h2>
      <form id="add-task-form">
        <label for="task-name">Task Name:</label>
        <input type="text" id="task-name" name="task_name" required>
        <label for="task-description">Task Description:</label>
        <textarea id="task-description" name="task_description"></textarea>
        <button type="button" class="btn" id="add-task-button-popup">Add Task</button>
      </form>
    </div>
  </div>
  <div class="udtask-popup" id="udtask-popup" style="display: none;">
    <div class="udtask-popup-content">
      <span class="close" id="close-modal">&times;</span>
      <h2>Update Task</h2>
      <form id="update-task-form">
        <input type="hidden" id="update-task-id" name="task_id">
        <label for="update-task-name">Task Name:</label>
        <input type="text" id="update-task-name" name="task_name" required>
        <label for="update-task-description">Task Description:</label>
        <textarea id="update-task-description" name="task_description"></textarea>
        <button type="button" class="btn" id="update-task-button-popup" onclick="updateTask()">Update Task</button>
      </form>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    const logoutButton = document.getElementById('logout-button');
    logoutButton.addEventListener('click', function () {
      clearToken();
      window.location.href = '/index.html';
    });

    const addButton = document.getElementById('add-task-button');
    const taskPopup = document.getElementById('task-popup');
    const addTaskButtonPopup = document.getElementById('add-task-button-popup');

    addButton.addEventListener('click', function () {
      taskPopup.style.display = 'block';
    });
    addTaskButtonPopup.addEventListener('click', function() {
      var taskName = document.getElementById('task-name').value;
      var taskDescription = document.getElementById('task-description').value;
      var userId = "<%= user.id %>";
  
      var task = {
        taskName: taskName,
        taskDescription: taskDescription,
        userId: userId 
      };
  
      fetch('/addtask', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(task)
      })
        .then(response => {
          if (response.ok) {
            console.log('Task added successfully');
            window.location.reload();
          } else {
            console.error('Error adding task:', response.status);
          }
        })
        .catch(error => {
          console.error('Error adding task:', error);
        });
  
      taskPopup.style.display = 'none';
    });
  
    function confirmDelete(event) {
      if (!confirm('Are you sure you want to delete this task?')) {
        event.preventDefault();
      }
    }
  function showUpdatePopup(taskId) {
    var updateTaskPopup = document.getElementById('udtask-popup');
    updateTaskPopup.style.display = 'block';

    // Set the task ID in the update form
    var updateTaskIdInput = document.getElementById('update-task-id');
    updateTaskIdInput.value = taskId;
  }

  // Function to handle the update task button click event
  function updateTask() {
    var updateTaskId = document.getElementById('update-task-id').value;
    var updateTaskName = document.getElementById('update-task-name').value;
    var updateTaskDescription = document.getElementById('update-task-description').value;

    var updatedTask = {
      task_id: updateTaskId,
      task_name: updateTaskName,
      task_description: updateTaskDescription
    };

    fetch('/tasks/edit/' + updateTaskId, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(updatedTask)
    })
      .then(response => {
        if (response.ok) {
          console.log('Task updated successfully');
          window.location.reload();
        } else {
          console.error('Error updating task:', response.status);
        }
      })
      .catch(error => {
        console.error('Error updating task:', error);
      });

    // Close the update task popup after updating the task
    var updateTaskPopup = document.getElementById('udtask-popup');
    updateTaskPopup.style.display = 'none';
  }

  // Add event listener to the update task button in the popup form
  var updateTaskButtonPopup = document.getElementById('update-task-button-popup');
  updateTaskButtonPopup.addEventListener('click', updateTask);
</script>
</body>

</html>